<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.mp45.piuslab2.controllers.FirstTabController">

    <Text text="Выберите тип графика: "
          layoutX="10.0" layoutY="65.0"/>

    <ComboBox fx:id="plotList"
              prefHeight="25.0" prefWidth="150.0"
              layoutX="170.0" layoutY="50.0"/>

    <Text text="Начальная точка: "
          layoutX="10.0" layoutY="115.0"/>

    <TextField
            fx:id="startPoint" promptText="Введите значение"
            minHeight="25.0" maxHeight="25.0"
            prefWidth="150.0"
            layoutX="170.0" layoutY="100.0"/>

    <Text text="Конечная точка: "
          layoutX="10.0" layoutY="165.0"/>

    <TextField
            fx:id="endPoint" promptText="Введите значение"
            minHeight="25.0" maxHeight="25.0"
            prefWidth="150.0"
            layoutX="170.0" layoutY="150.0"/>

    <Text text="Построить график: "
          layoutX="10.0" layoutY="215.0"/>

    <Button text="OK" onAction="#onClickMethod"
            prefHeight="20.0" prefWidth="75.0"
            layoutX="195.0" layoutY="200.0"/>

</AnchorPane>
